{
  "name": "@obinexuscomputing/dom-asm",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "A unified library for DOM manipulation and compilation.",
  "bin": {
    "dom-asm": "./bin/dom-asm",
    "dom-asm.bat": "./bin/dom-asm.bat",
    "dom-asm.ps1": "./bin/dom-asm.ps1",
    "dom-asm.sh": "./bin/dom-asm.sh"
  },
"workspaces": [
  ".",
  "packages/*"
],

  "scripts": {
    "build": "npx rollup -c && npx turbo build",
    "start": "node dist/index.js",
    "dev": "rollup -c -w",
    "test": "turbo test",
    "lint": "turbo lint && eslint . --fix",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "clean": "turbo clean && rm -rf node_modules packages/*/node_modules dist",
    "cli": "node bin/dom-asm",
    "prebuild": "npm run clean",
    "postbuild": "npm run lint && npm run test",
    "prepare": "npm run build",
    "release": "npm run clean && npm run build && npm publish",
    "analyze": "rollup -c --bundle-stats",
    "prettify": "prettier --check \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.8",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.3.1",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.18.0",
    "@typescript-eslint/parser": "^6.18.0",
    "@vue/compiler-sfc": "^3.5.13",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "rollup": "^4.28.1",
    "ts-jest": "^29.1.1",
    "tslib": "^2.6.0",
    "turbo": "^1.13.4",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "@obinexuscomputing/css": "workspace:*",
    "@obinexuscomputing/html": "workspace:*",
    "@obinexuscomputing/js": "workspace:*",
    "commander": "^11.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-ts": "^3.4.5"
  },
  "packageManager": "npm@10.9.2",
  "license": "ISC",
  "volta": {
    "node": "18.20.5"
  }
}
