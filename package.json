{
  "name": "@obinexuscomputing/dom-asm",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "A unified library for DOM manipulation and compilation.",
  "bin": {
    "dom-asm": "./bin/dom-asm",
    "dom-asm.bat": "./bin/dom-asm.bat",
    "dom-asm.ps1": "./bin/dom-asm.ps1"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build:ts": "tsc --build",
    "build": "npm run build:ts",
    "test": "turbo test",
    "lint": "turbo lint",
    "clean": "turbo clean && rm -rf node_modules packages/*/node_modules dist",
    "prebuild": "rm -rf packages/*/dist dist",
    "pretest": "npm run build",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "cli": "node bin/dom-asm"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@rollup/plugin-typescript": "^11.0.0",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.18.0",
    "@typescript-eslint/parser": "^6.18.0",
    "@vue/compiler-sfc": "^3.5.13",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "rollup": "^4.28.1",
    "ts-jest": "^29.1.1",
    "tslib": "^2.6.0",
    "turbo": "^1.13.4",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@obinexuscomputing/css": "workspace:*",
    "@obinexuscomputing/html": "workspace:*",
    "@obinexuscomputing/js": "workspace:*",
    "commander": "^11.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-ts": "^3.4.5"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "npm@10.9.2",
  "license": "ISC",
  "volta": {
    "node": "18.20.5"
  }
}
