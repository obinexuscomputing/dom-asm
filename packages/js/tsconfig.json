{
  "compilerOptions": {
    "target": "ES2020",
    "module": "esnext",       // Ensure compatibility with Node.js and Jest
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "./dist",         // Compile output directory
    "baseUrl": ".",             // Enable path aliases
    "paths": {
      "src/*": ["src/*"]        // Support path aliases for src files
    },
    "sourceMap": true           // Enable source maps for debugging
  },
  "include": [
    "src/**/*",                 // Include source files
    "src/*.ts",
    "tests/**/*"                // Include test files
  ],
  "exclude": [
    "node_modules",             // Exclude dependencies
    "dist"                      // Exclude compiled output
  ]
}
