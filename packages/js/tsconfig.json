{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false, // Ensure JavaScript files are generated as well
    "baseUrl": ".",
    "paths": {
      "src/*": ["src/*"]
    },
    "sourceMap": true,
    "skipLibCheck": true // Prevents type conflicts in `node_modules`
  },
  "include": [
    "src/**/*",
    "tests/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.d.ts" // Exclude existing declaration files from being recompiled
  ]
}
