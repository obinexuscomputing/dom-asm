{
  
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.json"
      }
    },
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "preset": "ts-jest",
    "roots": ["<rootDir>/src", "<rootDir>/tests"],
    "testEnvironment": "node",
    "testMatch": ["**/__tests__/**/*.+(ts|tsx|js)", "**/?(*.)+(spec|test).+(ts|tsx|js)"],
    "transform": {
      "^.+\\.ts$": ["ts-jest", { "tsconfig": "tsconfig.json" }]
    }
  }
  