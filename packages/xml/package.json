{
  "name": "@obinexuscomputing/xml",
  "version": "1.0.0",
  "description": "A robust XML parsing and manipulation library",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "type": "module",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "build": "npm run build:ts && npm run build:rollup",
    "build:ts": "tsc --emitDeclarationOnly",
    "build:rollup": "rollup -c",
    "test": "jest --config jest.config.cjs",
    "lint": "eslint .",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "prepare": "npm run build"
  },
  "keywords": [
    "xml",
    "parser",
    "ast",
    "dom",
    "tokenizer",
    "generator",
    "validator"
  ],
  "author": "Nnamdi Okpala <okpalan@protonmail.com>",
  "license": "ISC",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.8",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.3.1",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.18.0",
    "@typescript-eslint/parser": "^6.18.0",
    "@vue/compiler-sfc": "^3.5.13",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "rollup": "^4.28.1",
    "ts-jest": "^29.1.1",
    "tslib": "^2.6.0",
    "typescript": "^5.7.2"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/obinexuscomputing/xml.git"
  },
  "bugs": {
    "url": "https://github.com/obinexuscomputing/xml/issues"
  },
  "homepage": "https://github.com/obinexuscomputing/xml#readme"
}
