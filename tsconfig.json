{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "declaration": true,
    "declarationDir": "dist",
    "outDir": "dist",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "*": ["packages/*"]
    }
  },
  "include": ["src/**/*.ts", "packages/*/src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
